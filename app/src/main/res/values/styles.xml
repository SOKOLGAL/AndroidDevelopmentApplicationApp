<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textVariantsColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/corner_radius_8</item>
    </style>

    <style name="HeaderTitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/header_title_font_size</item>
        <item name="android:textColor">@color/headerTitleColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardTitleText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/size_text_card</item>
        <item name="android:textColor">@color/headerTitleColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CardDescriptionText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/size_text_description_card</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NameRecipeText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">@dimen/size_text_card</item>
        <item name="android:textColor">@color/headerTitleColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MethodOfPreparationText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/size_text_card</item>
        <item name="android:textColor">@color/methodOfPreparationColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Portions14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/methodOfPreparationColor</item>
    </style>

</resources>